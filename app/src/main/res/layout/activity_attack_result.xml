<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dragonsofmugloar.dragons_of_mugloar.AttackResult"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtKnightName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/txtKnight"
        android:gravity="left"
        android:layout_below="@+id/txtKnightName"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView6"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS."
        android:id="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/txtKnight"
        android:layout_alignTop="@+id/txtKnight"
        android:gravity="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/txtDragon"
        android:gravity="center|right"
        android:layout_alignTop="@+id/txtKnight"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView6"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtMessage"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtKnight"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/txtMessage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="237dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/txtResult"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtMessage"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:id="@+id/btnNewGame"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Victories!"
                android:id="@+id/textView9"
                android:layout_gravity="left|top"
                android:textColor="#FF000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/txtVictories"
                android:layout_gravity="left|top"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:gravity="center"
                android:layout_alignRight="@+id/textView9"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Defeats!"
                android:id="@+id/textView10"
                android:layout_gravity="right|top"
                android:textColor="#FF000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/txtDefeats"
                android:layout_below="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:textColor="#000000"
                android:gravity="center|clip_vertical"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="999dp"
        android:background="#ffffff"
        android:id="@+id/frmBattle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Epic battle taking place... only one will survive!"
            android:id="@+id/textView8"
            android:layout_gravity="center"
            android:textColor="#000000" />
    </FrameLayout>

</RelativeLayout>
